@page "{standId:Guid}"

@model ArteConexao.Pages.Admin.GerenciamentoReservaModel

@{
    ViewData["Title"] = "Gerenciar reservas";
}

<!-- Header início -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Gerenciar reservas</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-body" href="#">Pages</a></li>
                <li class="breadcrumb-item"><a class="text-body" href="#">Default</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Gerenciar reservas</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header fim -->
<!-- Grid início -->
<div class="container-xxl py-3">
    <div class="container">
        <partial name="_Notificacao"></partial>
        <div class="row g-5 justify-content-center">
            <div class="wow fadeInUp" data-wow-delay="0.5s">
                @if (Model.ItensReservaViewModel.Any())
                {
                    <div class="container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Status</th>
                                    <th>Quantidade</th>
                                    <th>Valor unitário</th>
                                    <th>Valor total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var indice = 1;

                                    @foreach (var itemReserva in Model.ItensReservaViewModel)
                                    {
                                        <tr>
                                            <td>@indice</td>
                                            <td>@itemReserva.Id</td>
                                            <td>@itemReserva.Nome</td>
                                            <td>@itemReserva.Status</td>
                                            <td>@itemReserva.Quantidade</td>
                                            <td>@itemReserva.ValorReserva</td>
                                            <td>@itemReserva.ValorReserva</td>
                                            <td>
                                                <form method="post">
                                                    <input type="hidden" asp-for="StandId">
                                                    <button type="submit" class="btn" asp-page-handler="processamento" name="itemReservaId" value="@itemReserva.Id" title="Processar">
                                                        <i class="fa fa-arrow-right fa-fw text-dark"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>

                                        indice++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Grid fim -->