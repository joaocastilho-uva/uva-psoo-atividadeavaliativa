@page "{usuarioId:Guid}"

@model ArteConexao.Pages.Admin.VisualizacaoUsuarioModel

@{
    ViewData["Title"] = "Visualizar usuário";
}

<body>
    <!-- Header início -->
    <div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <h1 class="display-3 mb-3 animated slideInDown">Visualização de usuário</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-body" href="#">Pages</a></li>
                    <li class="breadcrumb-item"><a class="text-body" href="#">Admin</a></li>
                    <li class="breadcrumb-item text-dark active" aria-current="page">Visualização de usuário</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Header fim -->
    <!-- Form início -->
    <div class="container-xxl py-3">
        <div class="container">
            <partial name="_Notificacao"></partial>
            <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <h1 class="display-5 mb-3">Visualizar usuário</h1>
            </div>
            <div class="row g-5 justify-content-center">
                <div class="col-lg-7 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                    <form method="get">
                        <input type="hidden" asp-for="StandId">
                        <div class="form-floating mb-3">
                            <input id="iptId" type="text" class="form-control" asp-for="UsuarioViewModel.Id" placeholder="Id"  disabled />
                            <label for="iptId">Id</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input id="iptNome" type="text" class="form-control" asp-for="UsuarioViewModel.Nome" placeholder="Nome" disabled />
                            <label for="iptNome">Nome</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input id="iptEmail" type="email" class="form-control" asp-for="UsuarioViewModel.Email" placeholder="Email" disabled>
                            <label for="iptEmail">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input id="iptSenha" type="password" class="form-control" asp-for="UsuarioViewModel.Senha" placeholder="Senha" disabled />
                            <label for="iptSenha">Senha</label>
                        </div>
                        <div class="form-check mb-3">
                            <input id="chkAdmin" class="form-check-input" type="checkbox" asp-for="UsuarioViewModel.Admin" disabled>
                            <label for="chkAdmin">Admin</label>
                        </div>
                        <div class="col-md-12 text-center">
                            <a id="btnVoltar" class="btn btn-primary rounded-pill py-3 px-5" href="/admin/gerenciamentousuario/@Model.StandId" role="button">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Form fim -->
</body>